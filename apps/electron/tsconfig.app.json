{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "target": "ES2017",
    "importHelpers": true,
    "module": "commonjs",
    "sourceMap": false,
    "declaration": false,
    "moduleResolution": "Node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "downlevelIteration": true,
    "esModuleInterop": true,
    "types": ["node"]
  },
  "exclude": ["jest.config.ts", "**/*.spec.ts", "**/*.test.ts"],
  "include": ["**/*.ts"]
}
